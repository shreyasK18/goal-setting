{
  "name": "goal-setter-backend",
  "version": "1.0.0",
  "description": "Backend for Goal Setter app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:clean && npm run build:copy",
    "build:clean": "rm -rf build",
    "build:copy": "mkdir -p build && cp -r *.js config controllers middleware models routes build/ && cp package*.json build/"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^15.0.0",
    "express": "^4.17.2",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^6.1.9"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
